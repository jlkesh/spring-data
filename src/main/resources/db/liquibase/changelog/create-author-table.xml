<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.7.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- create author table -->
    <changeSet id="2019072304-1" author="admin">

        <sql>
            drop table author if exists ;
        </sql>
        <createTable tableName="author">
            <column name="id" type="bigint" autoIncrement="true" generationType="identity" >
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(50)"/>
        </createTable>

    </changeSet>
</databaseChangeLog>

